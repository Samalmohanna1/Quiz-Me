---
import Hero from '../components/Hero.astro'
import QuizList from '../components/QuizList.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import Separator from '../components/Separator.astro'
import Testimonial from '../components/Testimonial.astro'
---

<BaseLayout title=''>
	<Separator direction='column' />
	<Hero />
	<Separator direction='column-reverse' />
	<QuizList />
	<Separator direction='column-reverse' color='pink' />
	<Testimonial />
	<Separator direction='column-reverse' color='var(--color-yellow-600)' />
</BaseLayout>

<style>
	p {
		margin-block: 100px;
	}
	.heading {
		font-size: var(--text-step-5);
		padding-block: var(--spacing-s);
	}
</style>
